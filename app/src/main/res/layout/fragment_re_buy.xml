                    android:layout_height="3dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/steelPrice_txt"
                    android:layout_width="wrap_content"
