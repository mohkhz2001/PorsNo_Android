<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragment.ReBuyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/relativeLayout_kind"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_account_level"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/kind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_upgrad_btn"
                android:elevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:fontFamily="@font/vazir"
                    android:gravity="center"
                    android:text="نوع"
                    android:textColor="#000"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/accountLevel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/kind"
                android:fontFamily="@font/mitra"
                android:gravity="center"
                android:text="برنز"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_day"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_account_level"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout_kind">

            <RelativeLayout
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_upgrad_btn"
                android:elevation="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:fontFamily="@font/vazir"
                    android:gravity="center"
                    android:text="روز"
                    android:textColor="#000"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/dayLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/day"
                android:fontFamily="@font/mitra"
                android:gravity="center"
                android:text="39روز"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

